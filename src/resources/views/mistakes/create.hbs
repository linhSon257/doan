<div class="container t-4 mb-4 col-lg-6">
  <h3>Create mistake</h3>
  <form class="mt-4" method="POST" action="/mistakes/store">
    <div class="form-group">
    </div>
    <div class="form-group">
      <label for="studentName">Student Name</label>
      <select class="form-control" id="student" name="student">
        {{#each students}}
          <option value="{{this._id}}">{{this.studentName}}</option>
        {{/each}}
      </select>
    </div>
    <div class="form-group">
      <label for="termName">Term</label>
      <select class="form-control" id="term" name="term">
        {{#each terms}}
          <option value="{{this._id}}">{{this.termName}}</option>
        {{/each}}
      </select>
    </div>
    <div class="form-group">
      <label for="mistakeName">Mistake Name</label>
      <input type="text" class="form-control" id="mistakeName" name="mistakeName" required/>
    </div>
    <div class="form-group">
      <label for="mistakeDescription">mistake Description</label>
      <input
        type="text"
        class="form-control"
        id="mistakeDescription"
        name="mistakeDescription"
        value="go to school late"
        required
      />
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
  </form>

</div>

