<div class=" container t-4 mb-4 col-lg-6">
    <h3>Update test type</h3>
    <form class  = "mt-4" method="POST" action= "/mistakes/{{mistake._id}}?_method=PUT">
        <div class="form-group">
            <label for="studentName">Student Name</label>
                <select class="form-control"   id="student" name="student">
                        {{#each students}}
                        <option value="{{this._id}}">{{this.studentName}}</option>
                        {{/each}}
                </select>
        </div>
        <div class="form-group">
            <label for="termName">Term</label>
                <select class="form-control"   id="term" name="term">
                        {{#each terms}}
                        <option value="{{this._id}}">{{this.termName}}</option>
                        {{/each}}
                </select>
        </div>
        <div class="form-group">
            <label for="mistakeName">Mistake Name</label>
            <input type="text" class="form-control"  value="{{mistake.mistakeName}}" id="mistakeName" name="mistakeName">
        </div>
        <div class="form-group">
            <label for="mistakeDescription">mistake Description</label>
            <input type="text" class="form-control"  value="{{mistake.mistakeDescription}}" id="mistakeDescription" name="mistakeDescription">
        </div>
        
        <button type="submit" class="btn btn-primary">Save</button>
</form>
</div>