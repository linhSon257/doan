<div class=" container mt-4 mb-4 col-lg-6">
    <h3>Update clat</h3>
    <form class= "container mt-4" method="POST" action= "/clats/{{clat._id}}?_method=PUT">
<div class="form-group">
            <label for="name">Class Name</label>
            <input type="text" class="form-control" value="{{clat.clatName}}" id="clatName" name="clatName">
        </div>
        
        <div class="form-group">
            <label for="clatType">Type</label>
                <select class="form-control" value="{{clat.clatType}}" id="clatType" name="clatType">
                        <option>talent class</option>
                        <option>normal class </option>
                </select>
        </div>
        <div class="form-group">
            <label for="teacherName">Teacher manage</label>
                <select class="form-control" value="{{clat.teacherName}}" id="teacherName" name="teacherName">
                        {{#each teachers}}
                            <option>{{this.teacherName}}</option>
                        {{/each}}
                </select>
        </div>
        <div class="form-group">
            <label for="minStudent">Min Students</label>
            <input type="text" class="form-control" value="{{clat.minStudent}}" id="minStudent" name="minStudent">
        </div>
        

        <div class="form-group">
            <label for="maxStudent">Max Student</label>
            <input type="text" class="form-control" value="{{clat.maxStudent}}" id="maxStudent" name="maxStudent">
        </div>


        <button type="submit" class="btn btn-primary">Save </button>
</form>
</div>