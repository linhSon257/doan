
<body>
<!-- header section ends -->
<section class="courses">

   <h1 class="heading"> our famous clats </h1>

   <div class="box-container">


            {{#each clats}}
               <div class="box">
                        <div class="image">
                           <a href="/clats/show/{{this._id}}">
                           <img src="{{this.clatImage}}"  alt="/clats/show/{{this._id}}">
                           </a>
                           
                           <h3>{{this.clatType}}</h3>
                        </div>
                        
                        <div class="content">
                           <h3>{{this.clatName}}</h3>
                           <a href="/clats/show/{{this._id}}" class="btn">read more</a>
                           <div class="icons">
                              <span> <i class="fas fa-book"></i> {{this.clatSlot}} slots </span>
                              <span> <i class="fas fa-clock"></i> {{this.clatTime}} hours </span>
                           </div>
                        </div> 
               </div>
            {{/each }}
   </div>
</section>

</body>
