
<body>
<!-- header section ends -->
<section class="courses">

   <h1 class="heading"> our famous courses </h1>

   <div class="box-container">


            {{#each courses}}
               <div class="box">
                        <div class="image">
                           <a href="/courses/show/{{this._id}}">
                           <img src="{{this.courseImage}}"  alt="/courses/show/{{this._id}}">
                           </a>
                           
                           <h3>{{this.courseType}}</h3>
                        </div>
                        
                        <div class="content">
                           <h3>{{this.courseName}}</h3>
                           <a href="/courses/show/{{this._id}}" class="btn">read more</a>
                           <div class="icons">
                              <span> <i class="fas fa-book"></i> {{this.courseSlot}} slots </span>
                              <span> <i class="fas fa-clock"></i> {{this.courseTime}} hours </span>
                           </div>
                        </div>
               </div>
            {{/each }}
   </div>
</section>

</body>
