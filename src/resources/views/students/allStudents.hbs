
<body>
<!-- header section ends -->
<section class="courses">

   <h1 class="heading"> our famous students </h1>

   <div class="box-container">


            {{#each students}}
               <div class="box">
                        <div class="image">
                           <a href="/students/show/{{this._id}}">
                           <img src="{{this.studentImage}}"  alt="/students/show/{{this._id}}">
                           </a>
                           
                           <h3>{{this.studentType}}</h3>
                        </div>
                        
                        <div class="content">
                           <h3>{{this.studentName}}</h3>
                           <a href="/students/show/{{this._id}}" class="btn">read more</a>
                           <div class="icons">
                              <span> <i class="fas fa-book"></i> {{this.studentSlot}} slots </span>
                              <span> <i class="fas fa-clock"></i> {{this.studentTime}} hours </span>
                           </div>
                        </div> 
               </div>
            {{/each }}
   </div>
</section>

</body>
