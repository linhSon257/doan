
<body>
<!-- header section ends -->
<section class="courses">

   <h1 class="heading"> Our Tests List and how we done Courses</h1>

   <div class="box-container">


            {{#each testxs}}
               <div class="box">
                        <div class="image">
                           <a href="/testxs/show/{{this._id}}">
                           <img src="{{this.testxImage}}"  alt="/testxs/show/{{this._id}}">
                           </a>
                           <h3>{{this.testxName}}</h3>
                        </div>
                        
                        <div class="content">
                           <a href="/testxs/show/{{this._id}}" class="btn">read more</a>
                           <div class="icons">
                              <span> <i class="fas fa-book"></i> {{this.testxLevel}} * Level </span>
                              <span> <i class="fas fa-clock"></i> {{this.testxTime}} minutes</span>
                           </div>
                        </div>
               </div>
            {{/each }}
   </div>
</section>

</body>
