<div class=" container t-4 mb-4 col-lg-6">
    <h3>Update test type</h3>
    <form class  = "mt-4" method="POST" action= "/testxs/{{testx._id}}?_method=PUT">
        <div class="form-group">
            <label for="testxName">testx Name</label>
            <input type="text" class="form-control" value="{{testx.testxName}}" id="testxName" name="testxName">
        </div>
        <div class="form-group">
            <label for="testxLevel">testx level</label>
                <select class="form-control"  value="{{testx.testxLevel}}" id="testxLevel" name="testxLevel">
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                </select>

        </div>


        <div class="form-group">
            <label for="testxTime"> Time doing</label>
            <input type="text" class="form-control"  value="{{testx.testxTime}}" id="testxTime" name="testxTime">
        </div>

        <div class="form-group">
        <label for="testxDescription">testx Description</label>
         <textarea class="form-control"  id="testxDescription" name="testxDescription"> {{testx.testxDescription}}</textarea>
        </div>
        <div class="form-group">
            <label for="testxImage">testx image</label>
            <input type="text" class="form-control" value="{{testx.testxImage}}" id="testxImage" name="testxImage">
        </div>
        
        <button type="submit" class="btn btn-primary">Save Test</button>
</form>
</div>