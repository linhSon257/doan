
<div class=" container mt-4 mb-4 col-lg-6">
    <h3>Update teacher</h3>
    <form class= "container mt-4" method="POST" action= "/teachers/{{teacher._id}}?_method=PUT">
                <div class="form-group">
            <label for="name">Teacher Name</label>
            <input type="text" class="form-control" value="{{teacher.teacherName}}" id="teacherName" name="teacherName" required>
        </div>
        
        
        <div class="form-group">
            <label for="teacherGender">Gender</label>
                <select class="form-control" value="{{teacher.teacherGender}}" id="teacherGender" name="teacherGender" required>
                        <option>Male</option>
                        <option>Female </option>
                </select>
        </div>

        <div class="form-group">
            <label for="teacherPhoneNumber">Numberphone</label>
            <input type="text" class="form-control" value="{{teacher.teacherPhoneNumber}}"id="teacherPhoneNumber" name="teacherPhoneNumber" required>
        </div>
        

        <div class="form-group">
            <label for="teacherDateOfBirth">Date of bird</label>
            <input type="text" class="form-control" value="{{teacher.teacherDateOfBirth}}"id="teacherDateOfBirth" name="teacherDateOfBirth" min="1930-01-01" max="2022-12-31" required>
        </div>
        
        <div class="form-group">
            <label for="teacherEmail">Email</label>
            <input type="email" class="form-control" value="{{teacher.teacherEmail}}"id="teacherEmail" name="teacherEmail" size="30" required>
        </div>

        <div class="form-group">
            <label for="teacherPassword">Password</label>
            <input type="text" class="form-control" value="{{teacher.teacherPassword}}"id="teacherPassword" name="teacherPassword" required>
        </div>

        <div class="form-group">
            <label for="teacherStatus">Status</label>
                <select class="form-control" value="{{teacher.teacherStatus}}"id="teacherStatus" name="teacherStatus" required>
                        <option>Practicing</option>
                        <option>Offical </option>
                        <option>Retired</option>
                </select>
        </div>
        <div class="form-group">
            <label for="teacherLocation">Address </label>
            <input type="text" class="form-control" value="{{teacher.teacherLocation}}"id="teacherLocation" name="teacherLocation" required>
        </div>

        <div class="form-group">
            <label for="teacherDescription">Description </label>
            <input type="text" class="form-control" value="{{teacher.teacherDescription}}"id="teacherDescription" name="teacherDescription">
        </div>
        <div class="form-group">
            <label for="teacherImage">Image</label>
            <input type="text" class="form-control" value="{{teacher.teacherImage}}"id="teacherImage" name="teacherImage" required>
        </div>


        <button type="submit" class="btn btn-primary">Save Teacher</button>
</form>
</div>