<div class=" container mt-4 mb-4 col-lg-6">
    <h3>Update teacher</h3>
    <form class= "container mt-4" method="POST" action= "/teachers/{{teacher._id}}?_method=PUT">
                <div class="form-group">
            <label for="name">Teacher Name</label>
            <input type="text" class="form-control" value="{{teacher.teacherName}}" id="teacherName" name="teacherName">
        </div>
        
        <div class="form-group">
            <label for="teacherGender">Gender</label>
            <input type="text" class="form-control" value="{{teacher.teacherGender}}" id="teacherGender" name="teacherGender">
        </div>

        <div class="form-group">
            <label for="teacherPhoneNumber">Numberphone</label>
            <input type="text" class="form-control" value="{{teacher.teacherPhoneNumber}}"id="teacherPhoneNumber" name="teacherPhoneNumber">
        </div>
        

        <div class="form-group">
            <label for="teacherDateOfBirth">Date of bird</label>
            <input type="text" class="form-control" value="{{teacher.teacherDateOfBirth}}"id="teacherDateOfBirth" name="teacherDateOfBirth">
        </div>
        
        <div class="form-group">
            <label for="teacherEmail">Email</label>
            <input type="text" class="form-control" value="{{teacher.teacherEmail}}"id="teacherEmail" name="teacherEmail">
        </div>

        <div class="form-group">
            <label for="teacherPassword">Password</label>
            <input type="text" class="form-control" value="{{teacher.teacherPassword}}"id="teacherPassword" name="teacherPassword">
        </div>

        <div class="form-group">
            <label for="teacherStatus">Status</label>
                <select class="form-control" value="{{teacher.teacherStatus}}"id="teacherStatus" name="teacherStatus">
                        <option>Practicing</option>
                        <option>Offical </option>
                        <option>Retired</option>
                </select>
            {{!-- <input type="text" class="form-control" id="teacherLevel" name="teacherLevel"> --}}
        </div>
        <div class="form-group">
            <label for="teacherLocation">Address </label>
            <input type="text" class="form-control" value="{{teacher.teacherLocation}}"id="teacherLocation" name="teacherLocation">
        </div>

        <div class="form-group">
            <label for="teacherDescription">Description </label>
            <input type="text" class="form-control" value="{{teacher.teacherDescription}}"id="teacherDescription" name="teacherDescription">
        </div>
        <div class="form-group">
            <label for="teacherImage">Image</label>
            <input type="text" class="form-control" value="{{teacher.teacherImage}}"id="teacherImage" name="teacherImage">
        </div>
        <div class="form-group">
            <label for="role">Role</label>
                <select class="form-control" value="{{teacher.role}}"id="role" name="role">
                        <option>Admin  </option>
                        <option>Teacher </option>
                        <option>Student</option>
                </select>
        </div>


        <button type="submit" class="btn btn-primary">Save Teacher</button>
</form>
</div>