
<body>
<!-- header section ends -->
<section class="courses">

   <h1 class="heading"> our famous teachers </h1>

   <div class="box-container">


            {{#each teachers}}
               <div class="box">
                        <div class="image">
                           <a href="/teachers/show/{{this._id}}">
                           <img src="{{this.teacherImage}}"  alt="/teachers/show/{{this._id}}">
                           </a>
                           
                           <h3>{{this.teacherType}}</h3>
                        </div>
                        
                        <div class="content">
                           <h3>{{this.teacherName}}</h3>
                           <a href="/teachers/show/{{this._id}}" class="btn">read more</a>
                           <div class="icons">
                              <span> <i class="fas fa-book"></i> {{this.teacherSlot}} slots </span>
                              <span> <i class="fas fa-clock"></i> {{this.teacherTime}} hours </span>
                           </div>
                        </div> 
               </div>
            {{/each }}
   </div>
</section>

</body>
