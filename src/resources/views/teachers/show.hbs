<div class="mt-4">
    <div class="row">
<section id="about" class="about">
      <div class="container">

        <div class="row">
          <div class="col-lg-4" data-aos="fade-right">
            <img src="{{teacher.teacherImage}}" class="img-fluid" alt="">
          </div>
          <div class="col-lg-8 pt-4 pt-lg-0 content" data-aos="fade-left">
            <h2>{{teacher.teacherName}}</h2>

            <div class="row " style="margin-left: 10px; margin-top: 10px; font-size:15px;">
              <div class="col-lg-6">
                <ul>
                  <li><i class="bi bi-chevron-right"></i> <strong>Birthday:</strong> <span>{{teacher.teacherDateOfBirth}}</span></li>
                  <li><i class="bi bi-chevron-right"></i> <strong>Gender:</strong> <span>{{teacher.teacherGender}}</span></li>
                  <li><i class="bi bi-chevron-right"></i> <strong>Phone:</strong> <span>{{teacher.teacherPhoneNumber}}</span></li>
                  
                </ul>
              </div>
              <div class="col-lg-6">
                <ul>
                  <li><i class="bi bi-chevron-right"></i> <strong>City:</strong> <span>{{teacher.teacherLocation}}</span></li>
                  <li><i class="bi bi-chevron-right"></i> <strong>Email:</strong> <span>{{teacher.teacherEmail}}</span></li>
                  <li><i class="bi bi-chevron-right"></i> <strong>Status:</strong> <span>{{teacher.teacherStatus}}</span></li>
                </ul>
              </div>
            </div>
            <p class="fst-italic">
             {{teacher.teacherDescription}}
            </p>
          </div>
        </div>

      </div>
    </section>
       
    </div>
</div>